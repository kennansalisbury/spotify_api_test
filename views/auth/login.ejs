<h1>Log In Here</h1>

<div class="row">
    <form method="POST" action="/auth/login" class="col s12"> 
        <div class="row">
            <div class="input-field col s12">
              <input id="email" type="email" class="validate" name="email">
              <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
              <input id="password" type="password" class="validate" name="password">
              <label for="password">Password</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light #80d8ff light-blue darken-3" type="submit" name="action">Log In
            <i class="material-icons right">send</i>
        </button>
        
    </form>
    <a href="/auth/spotify" class="btn btn-primary">Log in with Spotify</a>
</div>